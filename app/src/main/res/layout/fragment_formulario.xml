<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/control"
    tools:context=".fragment.FormularioFragment">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/introducir"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/idImage"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/casa" />

    <ImageView
        android:id="@+id/idImageCamara"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="-63dp"
        tools:src="@tools:sample/avatars[1]" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        android:text="@string/categoria"
        android:textColor="@color/colorAccent" />

    <Spinner
        android:id="@+id/idCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-22dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/nombre"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/idNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/precio"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/idPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/descripcion"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/idDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/importe"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/idImporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/fecha"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="301dp"
        android:layout_height="27dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-20dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/saldo"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/idSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/descrpcionMovimiento"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/idDesMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent" />

    <ImageButton
        android:id="@+id/idCompra"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorAccent"
        android:src="@drawable/cesta" />

    <ImageButton
        android:id="@+id/idPagar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="-51dp"
        android:background="@color/colorAccent"
        android:src="@drawable/pago" />

    <ImageButton
        android:id="@+id/idCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="-51dp"
        android:src="@drawable/camara" />

    <ImageButton
        android:id="@+id/idSave"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="-51dp"
        android:src="@drawable/save" />

</LinearLayout>